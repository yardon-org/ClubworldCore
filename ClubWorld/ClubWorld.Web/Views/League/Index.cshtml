@using ClubWorld.Models.League
@model IEnumerable<LeagueDetails>
@section CustomStyle
{
    <link rel="stylesheet" href='@Url.Content("/Content/Site/league.css")' type="text/css" />
}

@Html.AntiForgeryToken()
<h1>Domestic Leagues</h1>
<div class="pagecontainer">
    <div id="cw-league">
